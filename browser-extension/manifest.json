{
  "manifest_version": 3,
  "name": "AI URL Phishing Detector Helper",
  "version": "1.0",
  "description": "Checks websites for phishing probability and redirects to AI detector if suspicious",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
